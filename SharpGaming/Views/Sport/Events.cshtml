@model SharpGaming.Models.EventModel
@{
    ViewData["Title"] = "Events";
    Layout = "_Layout";
}

<div class="container">
    <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-12 col-sm-offset-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Events</h3>
                </div>
                <div class="panel-body">
                    <form role="form">
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label>Tournament</label>
                                    <select id="ddlTournament" name="tournamentIds" class="form-control" asp-items="@(new SelectList(ViewBag.Tournament,"id","name"))">
                                    </select>
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label>Status</label>
                                    <select id="ddlSport" name="status" class="form-control">
                                        <option value="0">Pre-Match</option>
                                        <option value="1">Live</option>
                                        <option value="2">All</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label>Start Date</label>
                                    <input type="text" id="txtDate" name="startDate" class="form-control" value="en" />
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label>Language</label>
                                    <input type="text" name="lang" id="txtlang" class="form-control" value="en" />
                                </div>
                            </div>

                        </div>
                        <input type="button" value="Submit" class="btn btn-primary p-2" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div>
    <table id="myTable" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>id</th>
                <th>name</th>
                <th>tournamentId</th>
                <th>sportId</th>
                <th>countryId</th>
                <th>dateStart</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.events != null)
            {
                @foreach (var item in Model.events)
                {
                    <tr>
                        <td>@item.id</td>
                        <td>@item.name</td>
                        <td>@item.tournamentId</td>
                        <td>@item.sportId</td>
                        <td>@item.countryId</td>
                        <td>@item.dateStart</td>
                    </tr>
                }}
        </tbody>
    </table>
</div>
