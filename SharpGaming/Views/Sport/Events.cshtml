@{
    ViewData["Title"] = "Events";
    Layout = "_Layout";
}

<div class="container">
    <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-12 col-sm-offset-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Events</h3>
                </div>
                <div class="panel-body">
                    <form role="form">
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label>Tournament</label>
                                    <select id="ddlSport" class="form-control">
                                        <option value="1">Tournament 1</option>
                                        <option value="2">Tournament 2</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label>Status</label>
                                    <select id="ddlSport" class="form-control">
                                        <option value="0">Pre-Match</option>
                                        <option value="1">Live</option>
                                        <option value="2">All</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label>Date Start</label>
                                   <input type="text" id="txtDate" class="form-control"/>
                                </div>
                            </div>
                        </div>
                        <input type="button" value="Submit" class="btn btn-primary p-2" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div>
    <table id="myTable" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Column 1</th>
                <th>Column 2</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Row 1 Data 1</td>
                <td>Row 1 Data 2</td>
            </tr>
            <tr>
                <td>Row 2 Data 1</td>
                <td>Row 2 Data 2</td>
            </tr>
        </tbody>
    </table>
</div>
