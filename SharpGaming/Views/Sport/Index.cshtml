@model SharpGaming.Models.Root
@{
    ViewData["Title"] = "Sport";
    Layout = "_Layout";
}

<div class="container">
    <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-12 col-sm-offset-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Sport</h3>
                </div>
                <div class="panel-body">
                    <form role="form">
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label>Name</label>
                                    <input type="text" name="Name" id="Name" class="form-control input-sm" placeholder="Name">
                                </div>
                            </div>
                        </div>
                        <input type="button" value="Submit" class="btn btn-primary p-2" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div>
    <table id="myTable" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.sports)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.name</td>

                </tr>
            }
        </tbody>
    </table>
</div>
