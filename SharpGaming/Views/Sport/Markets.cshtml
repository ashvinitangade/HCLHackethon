@model SharpGaming.Models.MarketModelRoot
@{
    ViewData["Title"] = "Markets";
    Layout = "_Layout";
}

<div class="container">
    <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-12 col-sm-offset-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Markets</h3>
                </div>
                <div class="panel-body">
                    <form role="form">
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label>Events</label>
                                    <select id="ddlEvent" name="eventIds" class="form-control" asp-items="@(new SelectList(ViewBag.Events,"id","name"))">
                                    </select>
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label>Markets</label>
                                    <select id="ddlMarket" name="marketIds" class="form-control" asp-items="@(new SelectList(ViewBag.Markets,"marketId","marketName"))">
                                    </select>
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label>Language</label>
                                    <input type="text" id="txtDate" class="form-control" value="en" />
                                </div>
                            </div>
                        </div>
                        <input type="button" value="Bet" class="btn btn-primary p-2" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div>
    <table id="myTable" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Column 1</th>
                <th>Column 2</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Row 1 Data 1</td>
                <td>Row 1 Data 2</td>
            </tr>
            <tr>
                <td>Row 2 Data 1</td>
                <td>Row 2 Data 2</td>
            </tr>
        </tbody>
    </table>
</div>
