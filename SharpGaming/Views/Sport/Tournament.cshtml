@model SharpGaming.Models.TournamentModel
@{
    ViewData["Title"] = "Tournament";
    Layout = "_Layout";
}

<div class="container">
    <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-12 col-sm-offset-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Tournament</h3>
                </div>
                <div class="panel-body">
                    <form method="post" enctype="multipart/form-data" asp-controller="Sport" asp-action="Tournament">
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label>Sport</label>
                                    <select id="ddlSport" name="sports" class="form-control" asp-items="@(new SelectList(ViewBag.Sports,"id","name"))">
                                        <option value="1">Football</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <label>Country</label>
                                <select id="ddlCountry" name="country" class="form-control" asp-items="@(new SelectList(ViewBag.Country,"id","name"))">
                                    <option value="1">Enland</option>
                                </select>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <label>Language</label>
                                <input type="text" name="lang" class="form-control" placeholder="En" value="en" />
                            </div>
                        </div>
                        <br />
                        <input type="submit" value="Submit" class="btn btn-primary p-2" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div>
    <table id="myTable" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>id</th>
                <th>name</th>
                <th>translation</th>
                <th>sportId</th>
                <th>countryId</th>
                <th>live</th>
                <th>preMatch</th>
                <th>meetingDate</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.tournaments !=null)
            {
                @foreach (var item in Model.tournaments)
                {
                    <tr>
                        <td>@item.id</td>
                        <td>@item.name</td>
                        <td>@item.translation</td>
                        <td>@item.sportId</td>
                        <td>@item.countryId</td>
                        <td>@item.live</td>
                        <td>@item.preMatch</td>
                        <td>@item.meetingDate</td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>
